<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>LifeFlow Blood Bank Application</display-name>
  
  <!-- Welcome File List -->
  <!-- When a user visits the root URL, Tomcat will look for these files -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!--
  When you create your servlets, you will map them here.
  For example:
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.lifeflow.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  -->
  
</web-app>
